                                                        @*</a>*@
                                                    }
                                                </span>
                                                <i class="fa fa-folder-o"></i>
                                            </div>
                                            <div class="card__expander" style="margin-top:15px">
                                                <i class="fa fa-close [ js-collapser ]"></i>
                                            </div>
                                            <div class="aciklama" style="padding: 20px 0;margin-top: 20px; margin-bottom: 10px; text-align: center; height: 75px">
                                                @if (katalogitem.katalogAdi != null)
                                                {
                                                    <p style="margin:0;">@Html.DisplayFor(x => katalogitem.katalogAdi)</p>
                                                }

                                            </div>
                                        </div>
                                    </a>
                                }

                            }
                        }
                    </div>

                </div>

            </div>
