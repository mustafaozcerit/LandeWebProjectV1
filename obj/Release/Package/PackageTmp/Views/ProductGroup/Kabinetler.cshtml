@*@model IEnumerable<LandeWebProjectV1.Models.UrunGrubu>*@
@model LandeWebProjectV1.Models.ViewModels.BaseModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";

    //var liste = (List<LandeWebProjectV1.Models.UrunGrubu>)ViewData["KabinetGroup"]; // Cast the list
    //var fotograf = (List<LandeWebProjectV1.Models.Fotograflar>)ViewData["Fotograflar"];
    var dil = ViewBag.dil;
    switch (dil)
    {
        case "tr":
            ViewBag.Title = "Kabinet Grupları";
            break;
        case "en":
            ViewBag.Title = "Cabinets Groups";
            break;
        default:
            ViewBag.Title = "Cabinets Groups";
            break;
    }
}
@switch (dil)
{
    case "tr":
        <div class="content">
            <form id="contentForm" method="POST">
                <div class="map-category-page container-fluid">
                    <div class="map-category-page-inner">


                        <div class="breadcrumb-chain">
                            <span class="breadcrumb-lsaquo">
                                &lsaquo;
                            </span>
                            <div class="breadcrumb-link">
                                <a href="~/tr">
                                    Anasayfa
                                </a>
                            </div>
                            <span class="breadcrumb-rsaquo">
                                &rsaquo;
                            </span>
                            <div class="breadcrumb-link">
                                <a href="~/tr/kabinetler">
                                    Kabinetler
                                </a>
                            </div>
                            <span class="breadcrumb-rsaquo">
                                &rsaquo;
                            </span>

                        </div>

                        <div class="map-category-page-image">
                            @foreach (var item in Model.bannerModels)
                            {
                                <img src="data:image;base64,@System.Convert.ToBase64String(item.fotograf)" style="height:auto; width:100%" />
                            }
                        </div>

                        <div class="map-category-page-title">
                            <h2>
                                Kabinetler
                            </h2>
                        </div>
                        <div class="map-category-page-description show-more">
                            @*@Html.TextBoxFor(y =>y)*@
                            <br />
                        </div>
                        <div class="four-features-text-heavy-module">
                            <div class="">
                                <div class="row">
                                    @foreach (var item in Model.urunModel)
                                    {
                                        <a class="col-lg-3 col-md-4 col-xs-12 col-sm-12" href="~/@item.URL">
                                            <div class="four-features-text-heavy-module-feature" style="margin: 0px 0px 0px 0px">

                                                <div class="four-features-text-heavy-module-feature-picture img-fluid" style="text-align: -webkit-center;">
                                                    @{if (item.fotograf != null)
                                                        {
                                                            <img src="data:image;base64,@System.Convert.ToBase64String(item.fotograf)" style="width: auto; height: 190px;" class="center-block;" />

                                                        }
                                                        else
                                                        {
                                                            <img src="~/Images/no-image-available.png" class='center-block' style="width: auto; height: 190px;" />
                                                        }
                                                    }
                                                </div>

                                                <div class="four-features-text-heavy-module-feature-title" style="text-align:center">
                                                    <span>@Html.DisplayFor(modelItem => item.Baslik)</span>
                                                </div>
                                                <div class="product-aciklama">
                                                    <span>@Html.DisplayFor(modelItem => item.Aciklama)</span>
                                                </div>

                                            </div>

                                        </a>

                                    }

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        break;
    case "en":
        <div class="content">
            <form id="contentForm" method="POST">
                <div class="map-category-page container-fluid">
                    <div class="map-category-page-inner">


                        <div class="breadcrumb-chain">
                            <span class="breadcrumb-lsaquo">
                                &lsaquo;
                            </span>
                            <div class="breadcrumb-link">
                                <a href="~/en">
                                    Home Page
                                </a>
                            </div>
                            <span class="breadcrumb-rsaquo">
                                &rsaquo;
                            </span>
                            <div class="breadcrumb-link">
                                <a href="~/en/cabinets">
                                    Cabinets
                                </a>
                            </div>
                            <span class="breadcrumb-rsaquo">
                                &rsaquo;
                            </span>

                        </div>

                        <div class="map-category-page-image">
                            @foreach (var item in Model.bannerModels)
                            {
                                <img src="data:image;base64,@System.Convert.ToBase64String(item.fotograf)" style="height:auto; width:100%" />
                            }
                        </div>
                        <div class="map-category-page-title">
                            <h2>
                                CABINETS
                            </h2>
                        </div>
                        <div class="map-category-page-description show-more">
                            @*@Html.TextBoxFor(y =>y)*@
                            <br />
                        </div>
                        <div class="four-features-text-heavy-module">
                            <div class="">
                                <div class="row">
                                    @foreach (var item in Model.urunModel)
                                    {
                                        <a class="col-lg-3 col-md-4 col-xs-12 col-sm-12" href="~/@item.URL">
                                            <div class="four-features-text-heavy-module-feature" style="margin: 0px 0px 0px 0px">

                                                <div class="four-features-text-heavy-module-feature-picture img-fluid" style="text-align: -webkit-center;">
                                                    @{if (item.fotograf != null)
                                                        {
                                                            <img src="data:image;base64,@System.Convert.ToBase64String(item.fotograf)" style="width: auto; height: 190px;" class="center-block;" />

                                                        }
                                                        else
                                                        {
                                                            <img src="~/Images/no-image-available.png" class='center-block' style="width: auto; height: 190px;" />
                                                        }
                                                    }
                                                </div>

                                                <div class="four-features-text-heavy-module-feature-title" style="text-align:center">
                                                    <span>@Html.DisplayFor(modelItem => item.Baslik)</span>
                                                </div>
                                                <div class="product-aciklama">
                                                    <span>@Html.DisplayFor(modelItem => item.Aciklama)</span>
                                                </div>

                                            </div>

                                        </a>

                                    }

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        break;
    default:
        break;
}



