@model LandeWebProjectV1.Models.ViewModels.BaseModel
@{
    ViewBag.Title = "Sertifikalar";
    Layout = "~/Views/Shared/_Layout.cshtml";


    var dil = ViewBag.dil;

}
@switch (dil)
{
    case "TR":
        <div class="map-category-page map-series container-fluid">
            <div class="map-category-page-inner map-series-page-inner">
                <div class="breadcrumb-chain">
                    <span class="breadcrumb-lsaquo">
                        &lsaquo;
                    </span>
                    <div class="breadcrumb-link">
                        <a href="/TR">
                            Anasayfa
                        </a>
                    </div>
                    <span class="breadcrumb-rsaquo">
                        &rsaquo;
                    </span>
                    <div class="breadcrumb-link">
                        <a href="~/TR/ProductGroup/Sertifikalar">
                            Sertifikalar
                        </a>
                    </div>
                </div>
                <div class="container">
                    <div class="row">

                        <H2 class="col-lg-12"><strong>Sertifikalar</strong></H2>

                        @if (Model.sertifikalarModels.Count > 0)
                        {
                            foreach (var item in Model.sertifikalarModels)
                            {
                                <div class=" card [ is-collapsed ] col-lg-3 col-md-4 col-xs-6">
                                    <div class="card__inner [ js-expander ]">
                                        <span>
                                            @if (item.fotograf != null)
                                            {
                                                <a href="@Url.Action("ShowPDF","ProductGroup", new { fileOid = item.Oid , doc = "serifika"})" target="_blank">
                                                    <img src="data:image;base64,@System.Convert.ToBase64String(item.fotograf)" class='img-responsive w-100 center-block' />
                                                </a>
                                            }
                                        </span>
                                        <i class="fa fa-folder-o"></i>
                                    </div>
                                    <div class="card__expander" style="margin-top:15px">
                                        <i class="fa fa-close [ js-collapser ]"></i>
                                    </div>
                                    <div class="aciklama">
                                        @if (item.WebDokumanAdi != null)
                                        {
                                            <div style="font-size: 14px; color: #12679A; padding: 0px 1em 0px 1em"><b>@Html.ActionLink(item.WebDokumanAdi, "ShowPDF", new { fileOid = item.Oid, doc = "serifika" })</b></div>
                                        }

                                    </div>
                                </div>

                            }
                        }
                    </div>
                    <div class="row">

                        <H2 class="col-lg-12"><strong>Kalite Dökümanları</strong></H2>

                        @if (Model.kaliteDokumanlariModels.Count > 0)
                        {
                            foreach (var item in Model.kaliteDokumanlariModels)
                            {
                                <a class="col-lg-3 col-md-4 col-xs-6" href="@Url.Action("ShowPDF","ProductGroup", new { fileOid = item.Oid , doc = "kaliteDokumanlari" })" target="_blank">
                                    <div class=" card [ is-collapsed ] ">
                                        <div class="card__inner [ js-expander ]">
                                            <span>
                                                @if (item.fotograf != null)
                                                {

                                                    <img src="data:image;base64,@System.Convert.ToBase64String(item.fotograf)" class='img-responsive w-100 center-block' />

                                                }
                                            </span>
                                            <i class="fa fa-folder-o"></i>
                                        </div>
                                        <div class="card__expander" style="margin-top:15px">
                                            <i class="fa fa-close [ js-collapser ]"></i>
                                        </div>
                                        <div class="aciklama">
                                            @if (item.WebDokumanAdi != null)
                                            {
                                                <i>@Html.DisplayFor(x => item.WebDokumanAdi)</i>
                                            }

                                        </div>
                                    </div>
                                </a>
                            }
                        }

                    </div>
                    <div class="row">

                        <H2 class="col-lg-12"><strong>Raporlar</strong></H2>

                        @if (Model.raporlarModels.Count > 0)
                        {
                            foreach (var item in Model.raporlarModels)
                            {
                                <a class="col-lg-3 col-md-4 col-xs-6" href="@Url.Action("ShowPDF","ProductGroup", new { fileOid = item.Oid , doc = "kaliteDokumanlari" })" target="_blank">
                                    <div class=" card [ is-collapsed ] ">
                                        <div class="card__inner [ js-expander ]">
                                            <span>
                                                @if (item.fotograf != null)
                                                {

                                                    <img src="data:image;base64,@System.Convert.ToBase64String(item.fotograf)" class='img-responsive w-100 center-block' />

                                                }
                                            </span>
                                            <i class="fa fa-folder-o"></i>
                                        </div>
                                        <div class="card__expander" style="margin-top:15px">
                                            <i class="fa fa-close [ js-collapser ]"></i>
                                        </div>
                                        <div class="aciklama">
                                            @if (item.WebDokumanAdi != null)
                                            {
                                                <i>@Html.DisplayFor(x => item.WebDokumanAdi)</i>
                                            }

                                        </div>
                                    </div>
                                </a>
                            }
                        }

                    </div>
                </div>
            </div>
        </div>
        break;
    case "ENG":
